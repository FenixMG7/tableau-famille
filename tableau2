    <script type="module">
        // Importation des fonctions depuis la version 12.9.0
        import { initializeApp } from "https://www.gstatic.com/firebasejs/12.9.0/firebase-app.js";
        import { getAnalytics } from "https://www.gstatic.com/firebasejs/12.9.0/firebase-analytics.js";
        import { getFirestore, doc, onSnapshot, updateDoc, setDoc, getDoc } 
        from "https://www.gstatic.com/firebasejs/12.9.0/firebase-firestore.js";

        // Ta configuration Firebase
        const firebaseConfig = {
            apiKey: "AIzaSyCUMXTUGw8jyJtjidhYSEqE8z07eK7Ca3E",
            authDomain: "tableaufamille-eb08b.firebaseapp.com",
            projectId: "tableaufamille-eb08b",
            storageBucket: "tableaufamille-eb08b.firebasestorage.app",
            messagingSenderId: "739527539477",
            appId: "1:739527539477:web:25efa3baf89016a9afc71c",
            measurementId: "G-GZSQJJ6J83"
        };

        // Initialisation de Firebase
        const app = initializeApp(firebaseConfig);
        const analytics = getAnalytics(app); // Gard√© car dans ton snippet
        const db = getFirestore(app);

        // --- LOGIQUE DE L'APPLICATION ---

        let currentUser = null;
        
        // Configuration des cat√©gories avec tes couleurs
        const categories = [
            { code: 'DT', name: 'D√©barrasser', color: 'row-dt' },
            { code: 'MT', 'name': 'Mettre Table', color: 'row-mt' },
            { code: 'LV', 'name': 'Lave Vaisselle', color: 'row-lv' },
            { code: 'PL', 'name': 'Plier Linge', color: 'row-pl' },
            { code: 'AU', 'name': 'Autres', color: 'row-au' }
        ];

        // Rendre la fonction accessible globalement pour les boutons HTML
        window.selectUser = (user) => {
            currentUser = user;
            document.getElementById('login-screen').style.display = 'none';
            document.getElementById('app-screen').style.display = 'block';
            document.getElementById('user-title').innerText = "Tableau de " + user.toUpperCase();
            
            // Lancer l'√©coute en temps r√©el
            initListener();
        };

        // √âcouter la base de donn√©es
        function initListener() {
            const userRef = doc(db, "famille", currentUser);
            
            onSnapshot(userRef, (docSnap) => {
                if (docSnap.exists()) {
                    // Si le document existe, on affiche
                    renderGrid(docSnap.data());
                } else {
                    // Si c'est la premi√®re fois (base vide), on cr√©e le profil
                    createEmptyProfile(userRef);
                }
            });
        }

        async function createEmptyProfile(ref) {
            await setDoc(ref, {
                DT: [false, false, false, false, false],
                MT: [false, false, false, false, false],
                LV: [false, false, false, false, false],
                PL: [false, false, false, false, false],
                AU: [false, false, false, false, false]
            });
        }

        // Dessiner le tableau (Grille)
        function renderGrid(data) {
            const container = document.getElementById('grid-container');
            container.innerHTML = ''; // Nettoyer
            let totalCrosses = 0;

            categories.forEach(cat => {
                const row = document.createElement('div');
                row.className = `task-row ${cat.color}`;
                
                // √âtiquette (DT, MT...)
                const label = document.createElement('div');
                label.className = 'task-label';
                label.innerText = cat.code;
                row.appendChild(label);

                // Zone des cases
                const boxesArea = document.createElement('div');
                boxesArea.className = 'checkbox-area';

                // R√©cup√©rer les donn√©es ou cr√©er un tableau vide si erreur
                const userChecks = data[cat.code] || [false, false, false, false, false];
                
                userChecks.forEach((isChecked, index) => {
                    const box = document.createElement('div');
                    box.className = isChecked ? 'box checked' : 'box';
                    // Ajout d'un petit d√©lai pour √©viter les doubles clics accidentels
                    box.onclick = () => toggleCheck(cat.code, index, userChecks);
                    
                    if(isChecked) totalCrosses++;
                    boxesArea.appendChild(box);
                });

                row.appendChild(boxesArea);
                container.appendChild(row);
            });

            updateRewards(totalCrosses);
        }

        // Action quand on clique sur une case
        async function toggleCheck(category, index, currentArray) {
            // Copie du tableau pour modifier
            const newArray = [...currentArray];
            newArray[index] = !newArray[index]; // Inverse (vrai/faux)
            
            const userRef = doc(db, "famille", currentUser);
            
            // Mise √† jour partielle (seulement la cat√©gorie chang√©e)
            await updateDoc(userRef, {
                [category]: newArray
            });
        }

        // Calcul des gains et affichage
        function updateRewards(total) {
            document.getElementById('total-crosses').innerText = total;
            
            // Barre de progression (Max 15 pour l'affichage visuel)
            let pct = (total / 15) * 100;
            if (pct > 100) pct = 100;
            const fillEl = document.getElementById('prog-fill');
            fillEl.style.width = pct + "%";
            
            // Afficher le % ou un emoji dans la barre
            if(total >= 15) fillEl.innerHTML = "MAX!&nbsp;";
            else if(total > 0) fillEl.innerHTML = "";

            // Calcul Argent
            const moneyEl = document.getElementById('money-val');
            moneyEl.className = 'money-display'; // Reset class
            
            if (total >= 15) {
                moneyEl.innerText = "5,00 ‚Ç¨";
                moneyEl.classList.add('money-active-5');
            } else if (total >= 10) {
                moneyEl.innerText = "3,00 ‚Ç¨";
                moneyEl.classList.add('money-active-3');
            } else {
                moneyEl.innerText = "0,00 ‚Ç¨";
            }
        }
        
        // Fonction bonus pour remettre √† z√©ro (cliquer sur "Semaine")
        window.confirmReset = async () => {
            if(confirm("Veux-tu commencer une NOUVELLE SEMAINE et effacer toutes les croix ?")) {
                const userRef = doc(db, "famille", currentUser);
                await createEmptyProfile(userRef);
            }
        }
    </script>
</body>
